@page
@model Primark.Pages.Customers.ViewModel
@{
    ViewData["Title"] = "View";
}



<h1>View Customers</h1>

<div>
    <table class="table table-active">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.CusRec[0].CustomerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CusRec[0].CustomerFirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CusRec[0].CustomerLastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CusRec[0].CustomerEmail)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>


        @for (int i = 0; i < Model.CusRec.Count; i++)
        {
<tr>
    <td>@Model.CusRec[i].CustomerID</td>
    <td>@Model.CusRec[i].CustomerFirstName</td>
    <td>@Model.CusRec[i].CustomerLastName</td>
    <td>@Model.CusRec[i].CustomerEmail</td>
    <td>
        <a asp-page="/Students/Update" asp-route-id="@Model.CusRec[i].Id">Update</a>
        <a asp-page="/Students/Delete" asp-route-id="@Model.CusRec[i].Id">Delete</a>
    </td>
</tr>}
    </table>
</div>