@page
@model Primark.Pages.Customers.UpdateModel
@{
    ViewData["Title"] = "Update";
}


<h1>Update Customer</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            <div class="form-group">
                <label asp-for="Customer.CustomerID" class="control-label"></label>
                <input asp-for="Customer.CustomerID" class="form-control" />
                <span asp-validation-for="Customer.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerFirstName" class="control-label"></label>
                <input asp-for="Customer.CustomerFirstName" class="form-control" />
                <span asp-validation-for="Customer.CustomerFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerLastName" class="control-label"></label>
                <input asp-for="Customer.CustomerLastName" class="form-control" />
                <span asp-validation-for="Customer.CustomerLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerEmail" class="control-label"></label>
                <input asp-for="Customer.CustomerEmail" class="form-control" />
                <span asp-validation-for="Customer.CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}